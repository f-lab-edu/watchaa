{
  "name": "movii-monorepo",
  "version": "1.0.0",
  "author": "Moon-Sangho",
  "license": "ISC",
  "private": true,
  "description": "A monorepo for the Movii project",
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.20.0"
  },
  "scripts": {
    "web": "pnpm --filter @movii/web",
    "carousel": "pnpm --filter movii-carousel",
    "build": "pnpm turbo run build",
    "typecheck": "pnpm turbo run typecheck",
    "lint": "pnpm turbo run lint",
    "lint:fix": "pnpm turbo run lint:fix",
    "format": "pnpm turbo run format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^16.2.3",
    "turbo": "^2.6.1"
  }
}
