{
  "name": "watchaa-monorepo",
  "version": "1.0.0",
  "author": "Moon-Sangho",
  "license": "ISC",
  "private": true,
  "description": "A monorepo for the Watchaa project",
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.20.0"
  },
  "scripts": {
    "web": "pnpm --filter @watchaa/web",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
